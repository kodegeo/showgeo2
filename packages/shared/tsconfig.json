{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,  
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "./dist",
    "emitDeclarationOnly": false,
  },
  "include": ["**/*.ts", "src/**/*"],
  "exclude": ["node_modules", "dist"]
}

